{
  "version": 2,
  "buildCommand": "npx vite build",
  "outputDirectory": "dist/public",
  "framework": null,
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@3.0.0"
    }
  },
  "rewrites": [
    { "source": "/api/projects/:id", "destination": "/api/projects/[id]" },
    { "source": "/api/variations/:id", "destination": "/api/variations/[id]" },
    { "source": "/api/jobs/:id/cancel", "destination": "/api/jobs/[id]/cancel" },
    { "source": "/api/jobs/:id/retry", "destination": "/api/jobs/[id]/retry" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}
